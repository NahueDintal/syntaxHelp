    "description": "Actualiza la imagen de un contenedor en un deployment."
  },
  {
    "keywords": ["rollout pause", "pausar despliegue"],
    "command": "kubectl rollout pause deployment <nombre>",
    "example": "kubectl rollout pause deployment web",
    "description": "Pausa un deployment para hacer cambios múltiples."
  },
  {
    "keywords": ["rollout resume", "reanudar despliegue"],
    "command": "kubectl rollout resume deployment <nombre>",
    "example": "kubectl rollout resume deployment web",
    "description": "Reanuda un deployment pausado."
  }
